<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*\.bbc\.co\.uk/iplayer"
      plugin=".*player.swf"
      initialState="buffering"
      version="4.0">

    <setCookie domain=".bbc.co.uk" path="/" name="BBCPGstat" secure="false" value="0%3A-"/>
    <setCookie domain=".bbc.co.uk" path="/iplayer" name="BBCiPlayer" secure="false" value="htl%3Dtrue"/>

	<crop x="0" y="0" width="0" height="-34" />

	<state name="buffering">
		<event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<!-- nothing to do here -->
			</action>
		</event>
	</state>

</site>